{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title"><strong>User View</strong></div>
                </div>
                <div class="panel-body">
                    <table class="table col-md-8">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>First Name</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th>Last Name</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th>UserName</th>
                                <td>{{ user.username }}</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"><br>
                                    <a href="{{ path('user_index') }}" class="btn btn-default">Back to the list</a>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title"><strong>Order list</strong></div>
                </div>
                <div class="panel-body">
                    {% if user.orderProduct is empty  %}
                        <h5> Order not available.</h5>
                    {% else %}
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>User</th>
                                    <th>Discription</th>
                                    <th>Originimage</th>
                                    <th>Finalimage</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set no = 1 %}
                                {% for orderProduct in user.orderProduct %}
                                    <tr>
                                        <td><label> {{ no }} {% set no=no+1 %}</label></td>
                                        <td>{{ orderProduct.user.username }}</td>
                                        <td>{{ orderProduct.discription }}</td>
                                        <td>
                                            <img src="/{{product_images_directory_assert}}/{{ orderProduct.originImage }}" width="100">
                                        </td>
                                        <td>
                                            <img src="/{{product_images_directory_assert}}/{{ orderProduct.finalImage }}" width="100">           
                                        </td>
                                        <td>
                                            <a href="{{ path('orderproduct_show', { 'id': orderProduct.id }) }}" class="btn btn-warning">show</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
